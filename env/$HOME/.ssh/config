Host *
  ServerAliveInterval 180
  Compression yes

# [AddKeysToAgent] risks leaking private key from agent.
#     Let [ControlMaster] handle authentication instead.
#     Might be useful when [ControlMaster] is unavailable.
Host *
  AddKeysToAgent yes

# [ControlMaster] currently does not work under Windows!
Host *
  ControlMaster auto
  # ControlPath ~/.ssh/.%r@%h:%p
  ControlPath /tmp/.ssh-%C
  ControlPersist 6h

# [UseKeychain] only works under MacOS!
Host *
  UseKeychain yes



#Host __HOST_ALIAS__
#  HostName      __IP_ADDR_OR_URL__
#  User          __USERNAME__
#  # Default: ~/.ssh/id_*
#  IdentityFile  __ID_FILE_1__
#  IdentityFile  __ID_FILE_2__
#  IdentityFile  __ID_FILE_N__
#  # Default: 22
#  Port          __PORT_NUM__
